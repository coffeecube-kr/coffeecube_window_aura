{
  "name": "coffeecube-window",
  "version": "1.0.0",
  "description": "CoffeeCube Desktop Application",
  "main": "electron/main-simple.js",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:python": "cd server && python main.py",
    "dev:all": "concurrently \"npm run dev:python\" \"npm run dev\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "generate:icons": "node scripts/generate-pwa-icons.js",
    "electron": "electron .",
    "electron:dev": "concurrently \"cross-env NODE_ENV=development next dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "node scripts/build-electron.js",
    "electron:package": "node scripts/package-electron.js",
    "electron:portable": "node scripts/package-portable.js",
    "electron:web": "node scripts/package-web.js",
    "package": "node scripts/package-simple.js",
    "deploy:prepare": "next build && node scripts/prepare-deploy.js",
    "deploy:start": "concurrently \"next start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.14",
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/ssr": "latest",
    "@supabase/supabase-js": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.511.0",
    "next": "^16.0.7",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.4.6",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.1.2",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "fs-extra": "^11.2.0",
    "postcss": "^8",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}
